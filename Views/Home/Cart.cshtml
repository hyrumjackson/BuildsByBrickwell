@{
    ViewData["Title"] = "Cart";

    // Placeholder for cart items. In a real app, this would be replaced with dynamic data from your cart management system
    var cartItems = new[]
    {
        new { ProductName = "Space Explorer Set", Quantity = 1, Price = 129.99m },
        new { ProductName = "Castle Adventure Set", Quantity = 2, Price = 99.99m }
    };

    // Calculating the total cost dynamically
    decimal grandTotal = cartItems.Sum(item => item.Price * item.Quantity);
}

<div class="container py-5">
    <h1>Shopping Cart</h1>
    <div class="table-responsive">
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Product</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>
                    <th scope="col">Total</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in cartItems)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>
                            <input type="number" value="@item.Quantity" min="1" class="form-control" style="width: 80px;">
                        </td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@(item.Price * item.Quantity).ToString("C")</td>
                        <td>
                            <button class="btn btn-danger btn-sm">Remove</button>
                        </td>
                    </tr>
                }
                <tr>
                    <th colspan="3" class="text-right">Grand Total:</th>
                    <th>@grandTotal.ToString("C")</th>
                    <th></th>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-between">
        <a class="btn btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Products">Continue Shopping</a>
        <button class="btn btn-primary">Checkout</button>
    </div>
</div>

