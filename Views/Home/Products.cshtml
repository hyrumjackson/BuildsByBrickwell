            }
        </select> *@

        <vc:product-types />
    </div>

    <!-- Products Grid -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (Product p in Model.Products)
        {
            <partial name="ProductSummary" model="p" />
        }
    </div>

</div>



@* Custom Tag Helper  *@
