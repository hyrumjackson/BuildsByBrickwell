@{
    // Dummy Categories and Colors for Filters
    var categories = new List<string> { "Fantasy", "Space", "Adventure", "City" };
    var colors = new List<string> { "Multicolor", "Black", "Brown", "Red", "Green" };
}

@model Product

<div class="col">
    <div class="card h-100">
        <div class="image-wrapper">
            <img src="@Model.ImgLink" class="card-img-top" alt="@Model.Name">
        </div>
        <div class="card-body">
            <h5 class="card-title">
                <a asp-area="" asp-controller="Home" asp-action="Details" class="text-dark">@Model.Name</a>
            </h5>
            <p class="card-text">$@Model.Price</p>
            <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Cart">Add to Cart</a>
        </div>
    </div>
</div>
